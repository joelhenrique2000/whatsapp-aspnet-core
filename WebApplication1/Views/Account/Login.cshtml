@model WebApplication1.ViewModel.AccountLoginViewModel
@{ ViewData["Title"] = "Register"; }
@{ Layout = "_Layout"; }

<div class="row">
    <div class="col-8">
        <h1>Entrar</h1>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input type="text" name="Email" value="@Model.Email" class="form-control" id="userEmail">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Senha</label>
                <input type="password" value="@Model.Senha" name="Senha" class="form-control" id="userPassword">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Criar conta</a>
        </form>
    </div>
</div>



